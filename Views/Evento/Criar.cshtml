@model TicketSales.Models.Evento

<div class="container mt-4">
    <h2>Cadastrar Novo Evento</h2>
    <hr />

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false, "", new { @class = "mb-0" })
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Criar" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Ex: Show de Rock" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Imagem do Evento</label>
                    <input type="file" name="foto" class="form-control" accept="image/*" />
                </div>

                <div class="mb-3">
                    <label asp-for="Categoria" class="form-label"></label>
                    <input asp-for="Categoria" class="form-control" placeholder="Ex: Musical" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="QuantidadeLugares" class="form-label"></label>
                        <input asp-for="QuantidadeLugares" type="number" class="form-control" />
                        <div class="form-text">Assentos serão gerados automaticamente.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Local (Nome do Estabelecimento)</label>
                        <input asp-for="Local" class="form-control" placeholder="Ex: Allianz Parque" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Endereço Completo</label>
                        <input asp-for="Endereco" class="form-control" placeholder="Ex: Rua Palestra Itália, 200, São Paulo - SP" />
                        <small class="text-muted">Isso será usado para gerar o mapa.</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Data e Hora do Evento</label>
                        <input asp-for="DataEvento" type="datetime-local" class="form-control" />
                        <span asp-validation-for="DataEvento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Valor" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="Valor" type="number" step="0.01" class="form-control" />
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success">Salvar Evento</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </form>
        </div>
    </div>
</div>