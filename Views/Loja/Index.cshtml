@model List<TicketSales.Models.Evento>

<div class="container mt-4">
    <h2 class="mb-4">Próximos Eventos</h2>

    <div class="row">
        @foreach (var evento in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(evento.Imagem))
                    {
                        <img src="~/imagens/@evento.Imagem" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@evento.Nome">
                    }
                    else
                    {
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                            Sem Imagem
                        </div>
                    }

                    <div class="card-body">
                        <h5 class="card-title">@evento.Nome</h5>
                        <p class="card-text text-muted">@evento.Categoria</p>
                        <h6 class="text-success">R$ @evento.Valor</h6>
                        <p class="small">Vagas: @evento.LugaresDisponiveis / @evento.QuantidadeLugares</p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a asp-action="Detalhes" asp-route-id="@evento.Id" class="btn btn-primary w-100">Comprar Ingressos</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>